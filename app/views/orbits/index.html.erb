<h1>Orbits</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Epoch</th>
      <th>First derivative of mean motion</th>
      <th>Second derivative of mean motion</th>
      <th>B star</th>
      <th>Inclination</th>
      <th>Apogee</th>
      <th>Perigee</th>
      <th>Period</th>
      <th>Right ascension of ascending node</th>
      <th>Eccentricity</th>
      <th>Argument of perigee</th>
      <th>Mean anomaly</th>
      <th>Mean motion</th>
      <th>Revolution number</th>
      <th>Two-Line Element Set</th>
      <th>Satellite</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orbits.each do |orbit| %>
      <tr>
        <td><%= orbit.name %></td>
        <td><%= orbit.epoch %></td>
        <td><%= orbit.first_derivative_of_mean_motion %></td>
        <td><%= orbit.second_derivative_of_mean_motion %></td>
        <td><%= orbit.b_star %></td>
        <td><%= orbit.inclination %></td>
        <td><%= orbit.apogee %></td>
        <td><%= orbit.perigee %></td>
        <td><%= orbit.period %></td>
        <td><%= orbit.right_ascension_of_ascending_node %></td>
        <td><%= orbit.eccentricity %></td>
        <td><%= orbit.argument_of_perigee %></td>
        <td><%= orbit.mean_anomaly %></td>
        <td><%= orbit.mean_motion %></td>
        <td><%= orbit.revolution_number %></td>
        <td><%= orbit.tles %></td>
        <td><%= link_to orbit.satellite.name, orbit.satellite %></td>
        <td><%= link_to 'Show', orbit %></td>
        <td><%= link_to 'Edit', edit_orbit_path(orbit) %></td>
        <td><%= link_to 'Destroy', orbit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

